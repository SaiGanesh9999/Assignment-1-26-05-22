#include <stdio.h>
#include<ctype.h>
#include<string.h>

int main()
{
    char s[100];
    int x=0,y=0,z=0;
    puts("enter a string");
    gets(s);
    for(int i=0;s[i]!='\0';i++){
        if(isupper(s[i])!=0){
            x++;
        }else{
            y++;
        }
        z++;
    }
    printf("lower = %d \n upper = %d \n total = %d\n",x,y,z);
    return 0;
}
